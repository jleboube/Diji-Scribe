# Server
PORT=8080
JWT_SECRET=change-me-to-a-long-random-string

# MongoDB
MONGODB_URI=mongodb://mongo:27017/autotranscribe

# Linode Object Storage (S3-compatible)
S3_ENDPOINT=https://us-east-1.linodeobjects.com
S3_REGION=us-east-1
LINODE_ACCESS_KEY=
LINODE_SECRET_KEY=
LINODE_BUCKET=

# Alternatively, you may use standard AWS env names (these take effect if LINODE_* are not set)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# OpenAI Whisper (Transcription)
OPENAI_API_KEY=
WHISPER_MODEL=whisper-1
OPENAI_BASE_URL=
OPENAI_ORG=
OPENAI_RETRIES=3
OPENAI_TIMEOUT_MS=120000
FAIL_ON_TRANSCRIPTION_ERROR=false
WHISPER_MAX_MB=25

# Deepgram (Fallback or Primary Transcription)
DEEPGRAM_API_KEY=
# Recommended model: nova-2 (others available per Deepgram docs)
DEEPGRAM_MODEL=nova-2
# Optional language code, e.g., en or en-US (Deepgram can auto-detect)
DEEPGRAM_LANGUAGE=
DEEPGRAM_SMART_FORMAT=true
DEEPGRAM_PUNCTUATE=true

# AssemblyAI (Optional Provider)
ASSEMBLYAI_API_KEY=
ASSEMBLYAI_BASE_URL=https://api.assemblyai.com
ASSEMBLYAI_MODEL=universal
ASSEMBLYAI_TIMEOUT_MS=300000
ASSEMBLYAI_POLL_MS=3000

# ClamAV
CLAMAV_HOST=clamd
CLAMAV_PORT=3310
SKIP_VIRUS_SCAN=false
SKIP_TRANSCRIPTION=false
LOG_SCAN_RESPONSES=false

# Admin API key for listing/generating registration codes
ADMIN_API_KEY=
# Optional tuning for code top-up endpoint
CODES_THRESHOLD=35
CODES_BATCH=50

# Default user bootstrap (created at server start if not present)
DEFAULT_USER_EMAIL=joeleboube@yahoo.com

# Stripe (optional, used for Pricing page checkout)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
# Price IDs for subscriptions
STRIPE_PRICE_HOBBY_MONTHLY=
STRIPE_PRICE_CREATOR_MONTHLY=
STRIPE_PRICE_BUSINESS_MONTHLY=
STRIPE_PRICE_HOBBY_ANNUAL=
STRIPE_PRICE_CREATOR_ANNUAL=
STRIPE_PRICE_BUSINESS_ANNUAL=
STRIPE_SUCCESS_URL=https://example.com/success
STRIPE_CANCEL_URL=https://example.com/cancel
